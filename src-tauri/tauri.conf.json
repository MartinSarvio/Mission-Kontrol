{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Mission Kontrol",
  "version": "1.0.0",
  "identifier": "com.openclaw.mission-kontrol",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Mission Kontrol",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": "default-src 'self' https://srv1356942.tail9aaaf1.ts.net; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://srv1356942.tail9aaaf1.ts.net https://*.tail9aaaf1.ts.net; img-src 'self' data: https:; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ2QTI2NDYyMDk4NDZCRjAKUldUd2E0UUpZbVNpMWhWQkw0dzRmcUlvQitQZ2ludzU4ZGVVdXRGOXFoUlZuNnd2TWRobkdlL2wK",
      "endpoints": [
        "https://github.com/MartinSarvio/Mission-Kontrol/releases/latest/download/latest.json"
      ]
    }
  }
}
