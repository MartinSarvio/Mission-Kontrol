  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "updater:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*.tail9aaaf1.ts.net/*" },
        { "url": "https://*.ts.net/*" },
        { "url": "http://127.0.0.1:*/*" },
        { "url": "http://localhost:*/*" },
        { "url": "https://api.github.com/*" },
        { "url": "https://github.com/*" }
      ]
    }
  ]
}
